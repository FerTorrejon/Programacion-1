// Vectores.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
#define MAX 100

using namespace std;

void cargar(int vec[],int tam); 
void ordenar(int vec[],int tam);
void mostrar(int vec[],int tam);

void main()
	{
		int n, vec[MAX], opcion;

		do
		 {
		   cout<<"Ingrese el tamaÃ±o de vector: ";
		   cin>>n;
		 }while(n>MAX || n<=0);
		do 
		  {
			  cout<<"=======MENU=======";
			  cout<<"1.Cargar"<<endl;
			  cout<<"2.Ordenar<<endl; 
			  cout<<"3.Mostrar"<<endl;
			  cout<<"0.Salir"<<endl;
			  cout<<"Opcion:"<<endl;
			  cin>>opcion;

			  switch(opcion) {
			  case 1: cargar(vec,n); break;
			  case 2: ordenar(vec,n);break;
			  case 3: mostrar(vec,n);break;
			  case 0: cout<<"Salir \n";
			  default: cout<<"ERROR \n";break;
			  }
			getch();
			system("cls");
		  }while(opcion!=0);
		  getch();
  }
  
void cargar(int vec[],int tam)
{
	for(int i=0;i<tam;i++)
	{
		
		cout<< "Ingrese el valor para vec["<< i << "]=";
		cin>> vec[i];
	}
}
void ordenar(int vec[],int tam)
{
	int aux;
	for (int i=0;i<tam-1;i++)
	{
		for(int j=i+1;j<tam;j++)
		{
			if(vec[i]>vec[j]) 
			{
				aux=vec[j];
				vec[j]=vec[i];
				vec[i]=aux;
			}
		}
	}
}
void mostrar(int vec[],int tam)
{
	for(int i=0;i<tam;i++)
	{
		cout<< "vec["<< i << "]=";
		cout<< vec[i]<<endl;
	}
}
